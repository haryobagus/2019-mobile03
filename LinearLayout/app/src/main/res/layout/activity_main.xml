<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="horizontal"
    tools:context=".MainActivity">
    <!--perbedaan match parent dengan wrap content adalah match parent
    digunakan untuk menyesuaikan ukuran lebar dan tinggi suatu tampilan
    sama dengan ukuran layar hp yg digunakan,sedangkan wrap content digunakan
    untuk menyesuaikan lebar dan tinggi tampilan sama dengan ukuran objek atau
    konten yg ada didalamnya-->

    <LinearLayout
        android:layout_width="664dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#FF6347"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"></LinearLayout>
<!--orientation = membuat tampilan menjadi vertical/horizontal-->
<!--weight sum = jumlah dari seluruh layout weight-->
<!--layout weight = ukuran dari layout weight semakin besar maka semakin
    lebar-->
</LinearLayout>